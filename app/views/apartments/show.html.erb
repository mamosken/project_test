<div class="wrapper-show">
	<div class="content_show">
		<div class="col-md-8">
			<h1> <%= @apartment.title %></h1>
			<%= image_tag @apartment.image.url(:medium, class: "apartment_image")  %>
				<% if current_user %>	
					<div class="map_display">
						<div style='width: 500px;'>
						<div id="map" style='width: 500px; height: 300px;'></div>
						</div>
					</div>
				<% end %>
			<p> <%= @apartment.body %></p>
			<p> <%= @apartment.postal_code %> </p>
			<div class="user_contact">
				<p><%= @apartment.user.email %></p>	
			</div>
			<div class="roomate_list_wrapper">
				<h4>Looking for roomate</h4>	
					<% @apartment.rooms.each do |room| %>
					<ul>
						<li><%= (room.name)%>
						<% if current_user and current_user == @apartment.user%>
						<%= link_to(" x ", room_path(room), method: :delete) %></li>
					</ul>
					<% end %>
					<% end %>
			</div>
			<div class="row">
				<div class="col-md-12">
				<%= link_to "Back", root_path, class: 'btn btn-default' %>
				<% if current_user and current_user ==  @apartment.user%>
				<%= link_to 'Edit', edit_apartment_path, class: 'btn btn-default', id: "edit" %>
				<%= link_to 'Delete', apartment_path, method: :delete, data: {confirm:"Confirm if you want to delete"},class: 'btn btn-default' %>
				<% end %>
				</div>
			</div>	
		</div>
	</div>		

	<script type= "text/javascript"> 
		handler = Gmaps.build('Google');
		handler.buildMap({

			provider: {

			}, 
			internal: {
				id: 'map'
			}
		}, 
		function(){

		 markers = handler.addMarkers(<%= raw @hash.to_json  %>);
		 handler.bounds.extendWith(markers);
		 handler.fitMapToBounds();
});
		</script>

</div>













