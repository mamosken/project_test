  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Sign up</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

          <div class="form-inputs">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true , input_html: { class: 'form-control' }%></br>
              <%= f.label :password %></br>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", input_html: { class: 'form-control' } %></br>
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", input_html: { class: 'form-control' } %></br>
          </div>
          <div class="form-actions">
            <%= f.submit "Sign up", class: 'btn btn-primary'  %>
          </div>
          <% end %>
          </br>

        <%= render "devise/shared/links" %>
    </div>
  </div>
