<div class="center_form">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Sign in</h2>

    <%=form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs"></br>
      <%= f.label :email %><br />
        <%= f.text_field  :email, required: false, autofocus: true, input_html: { class: 'form-control' } %></br>
        <%= f.label :password %></br>
        <%= f.password_field  :password, required: false, input_html: { class: 'form-control' } %></br>
        <%= f.label :remember_me %>
        <%= f.check_box  :remember_me, as: :boolean, input_html: { class: 'form-control' } if devise_mapping.rememberable? %></br>
      </div>
      <br>
  </div>
  <div class="form-actions">
    <%= f.submit "Sign in", class: 'btn btn-primary' %>
  </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>